<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity_raspuns_liber">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/IMGlogo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/TXTIntrebare"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="INTREBAREA X" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:text="@string/ETIntrebare_Liber" />

            <TextView
                android:id="@+id/TXTRaspunsuri"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="220dp"
                android:text="RASPUNS LIBER" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="250dp"
                android:text="@string/ET_Raspuns_liber" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="430dp"
                android:layout_marginRight="100dp"
                android:text="@string/BTN_Salveaza" />
        </RelativeLayout>







    </ScrollView>
</RelativeLayout>