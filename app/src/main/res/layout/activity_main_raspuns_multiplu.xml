<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity_raspuns_multiplu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/IMGlogo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/TXTIntrebare"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="INTREBAREA X" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:text="@string/ET_Intrebare_Multiplu" />

            <TextView
                android:id="@+id/TXTRaspunsuri"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="30dp"
                android:text="Alege unul sau mai multe raspunsuri:" />




            <CheckBox
                android:id="@+id/CBRaspunsA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:text="Raspuns A"
                android:layout_centerHorizontal="true"/>

            <CheckBox
                android:id="@+id/CBRaspunsB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/CBRaspunsA"
                android:layout_marginTop="260dp"


                android:text="Raspuns B" />

            <CheckBox
                android:id="@+id/CBRaspunsC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raspuns C"
                android:layout_alignStart="@+id/CBRaspunsA"
                android:layout_marginTop="280dp"/>

            <CheckBox
                android:id="@+id/CBRaspunsD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raspuns D"
                android:layout_alignStart="@+id/CBRaspunsA"
                android:layout_marginTop="300dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="430dp"
                android:layout_marginRight="100dp"
                android:text="@string/BTN_Salveaza" />
        </RelativeLayout>







    </ScrollView>
</RelativeLayout>