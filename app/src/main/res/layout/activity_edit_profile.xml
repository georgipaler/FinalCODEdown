<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="100px">

        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@drawable/img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nume"
                android:paddingRight="20px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prenume"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="150px"

        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingLeft="150px"
            >

            <TextView
                android:id="@+id/usernameTV"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/username"
                android:layout_width="0dip"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/usernameET"
                android:layout_width="0dip"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="20dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingLeft="150px"
            >

            <TextView
                android:id="@+id/facultateTV"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/facultate"
                android:layout_width="0dip"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/facultateET"
                android:layout_width="0dip"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="@string/facultate"
                android:textSize="20dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingLeft="150px"
            >

            <TextView
                android:id="@+id/anTV"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/an"
                android:layout_width="0dip"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/anET"
                android:layout_width="0dip"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="@string/an"
                android:textSize="20dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingLeft="150px"
            >

            <TextView
                android:id="@+id/grupaTV"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="@string/grupa"
                android:layout_width="0dip"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/grupaET"
                android:layout_width="0dip"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="@string/grupa"
                android:textSize="20dp"
                />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>