<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity_Feedback">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/IMGlogo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/TXTIntrebare"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="CUM FU TESTUL?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="140dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:orientation="horizontal"
                    android:text="@string/RGFeedback"
                    >


                    <RadioButton
                        android:id="@+id/RBFeedback1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_star"
                        android:text="1" />

                    <RadioButton
                        android:id="@+id/RBFeedback2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_star"
                        android:checked="false"
                        android:clickable="false"
                        android:text="2" />

                    <RadioButton
                        android:id="@+id/RBFeedback3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_star_big_on"
                        android:text="3" />

                    <RadioButton
                        android:id="@+id/RBFeedback4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_star_big_on"
                        android:text="4" />

                    <RadioButton
                        android:id="@+id/radioButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_star_big_on"
                        android:checked="false"
                        android:text="5" />
                </RadioGroup>
            </LinearLayout>
            <TextView
                android:id="@+id/TXTRaspunsuri"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="250dp"
                android:layout_centerHorizontal="true"
                android:text="Doresti sa ne transmiti ceva?" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:text="@string/ETFeedback" />


            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="430dp"
                android:layout_marginRight="100dp"
                android:text="@string/BTN_Salveaza" />
        </RelativeLayout>







    </ScrollView>
</RelativeLayout>