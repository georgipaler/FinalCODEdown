<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AdaugaIntrebareActivity">

    <EditText
        android:id="@+id/adaugaIntrebareNouaED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="Intrebare*"/>

    <Spinner
        android:id="@+id/alegeVariantaRaspunsSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/variante_raspuns"
        android:layout_below="@+id/adaugaIntrebareNouaED"
        android:layout_marginTop="50dp">
    </Spinner>

    <Button
        android:id="@+id/adaugaRaspunsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adauga raspunsurile intrebarii"
        android:layout_below="@+id/alegeVariantaRaspunsSP"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>