<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/intrebareNouaTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/adauga_intrebare_noua"
        android:textColor="#26C4EC"
        android:textSize="32dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/intrebareNouaED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intrebareNouaTxt"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_question"
        android:gravity="center"
        android:hint="@string/intrebare_noua" />

    <LinearLayout
        android:id="@+id/adevaratFalsLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intrebareNouaED"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_gri"
            android:text="@string/adevarat" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_gri"
            android:text="@string/fals" />
    </LinearLayout>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_albastru"
        android:text="@string/urmatoarea_intrebare" />

</RelativeLayout>