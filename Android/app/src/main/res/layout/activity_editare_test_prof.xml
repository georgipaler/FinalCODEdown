<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/editare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/editeaz_testul"
        android:textColor="#26C4EC"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>


    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewSwipe"
        android:padding="16dp"></com.baoyz.swipemenulistview.SwipeMenuListView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="bottom">


        <Button
            android:id="@+id/adauga"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="@drawable/background_albastru"
            android:text="@string/adauga_intrebare"
            android:textSize="16dp" />

        <Button
            android:id="@+id/salveaza"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="@drawable/background_roz"
            android:text="@string/salveaza"
            android:textSize="16dp" />
    </LinearLayout>


</LinearLayout>


