<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.StartActivity">

    <TextView
        android:id="@+id/intrebareTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/intrebarea_x"
        android:textColor="#26C4EC"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/intrebareRaspunsScurtTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intrebareTxt"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_question"
        android:gravity="center"
        android:hint="@string/ET_Intrebare_Multiplu" />

    <TextView
        android:id="@+id/raspunsuriTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intrebareRaspunsScurtTV"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:text="@string/raspuns_liber"
        android:textStyle="bold" />

    <EditText
        android:id="@id/raspunsED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/raspunsuriTxt"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:hint="@string/raspuns" />

    <Button
        android:id="@+id/salveazaIntrebareRaspunsScurtBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_albastru"
        android:text="@string/BTN_Salveaza" />

</RelativeLayout>