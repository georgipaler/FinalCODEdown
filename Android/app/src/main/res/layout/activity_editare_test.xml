<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/editare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/editeaz_testul"
        android:textColor="#26C4EC"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/intrebare1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editare"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:text="@string/intrebarea_1"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/rasp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intrebare1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="@string/raspunsuri"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/intrebare2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rasp1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        android:text="@string/intrebarea_2"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/rasp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intrebare2"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="@string/raspunsuri"
        android:textSize="20dp" />

    <Button
        android:id="@+id/adauga"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_albastru"
        android:text="@string/adauga_intrebare"
        android:textSize="16dp" />

    <Button
        android:id="@+id/salveaza"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_roz"
        android:text="@string/salveaza"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editare"
            android:layout_marginTop="100dp"
            android:background="@drawable/background_gri"
            android:text="@string/editeaza" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editare"
            android:layout_marginTop="100dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/background_gri"
            android:text="@string/sterge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editare"
            android:layout_marginTop="200dp"
            android:background="@drawable/background_gri"
            android:text="@string/editeaza" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editare"
            android:layout_marginTop="200dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/background_gri"
            android:text="@string/sterge" />
    </LinearLayout>
</RelativeLayout>


